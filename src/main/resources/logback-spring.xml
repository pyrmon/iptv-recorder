<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %5level --- [%15.15thread] %-40.40logger{39} : %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Reduce database/hibernate logging -->
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.springframework.orm" level="WARN"/>
    <logger name="org.springframework.data" level="WARN"/>
    
    <!-- Reduce FFmpeg logging -->
    <logger name="com.github.kokorin.jaffree" level="ERROR"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>